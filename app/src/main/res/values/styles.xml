<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">?colorControlNormal</item>
        <item name="colorPrimaryDark">?colorControlNormal</item>
        <item name="colorAccent">@color/lightBlue</item>

    </style>
    <style name="Widget.AppTheme.MenuButton" parent="Widget.MaterialComponents.Button.Icon">
        <item name="icon">@drawable/ic_menu_24</item>
        <item name="iconTint">@color/black</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
    </style>
    <style name="Widget.AppTheme.PlayButton" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="icon">@drawable/play_pause_button</item>
        <item name="iconTint">@color/black_small_button</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
    </style>
    <style name="Widget.AppTheme.LikeButton" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="icon">@drawable/ic_like_selector_24dp</item>
        <item name="iconTint">@color/color_like</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
    </style>

    <style name="Widget.AppTheme.ShareButton" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="icon">@drawable/ic_share_24</item>
        <item name="iconTint">@color/black_small_button</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
    </style>
</resources>